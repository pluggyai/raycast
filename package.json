{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "pluggy",
  "title": "Pluggy",
  "description": "Connect an account in a single command. Search connectors and check status.",
  "icon": "command-icon.png",
  "author": "fmiras",
  "owner": "pluggy",
  "categories": [
    "Developer Tools",
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-connectors",
      "title": "Search Connectors",
      "description": "Search over connectors and check status",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "type": "textfield",
      "required": true,
      "title": "Pluggy Client ID",
      "description": "Enter your Client ID",
      "placeholder": "af5ba067-2f1c-456d-8e36-903112614cb0"
    },
    {
      "name": "clientSecret",
      "type": "textfield",
      "required": true,
      "title": "Pluggy Client Secret",
      "description": "Enter your Client Secret",
      "placeholder": "e2062b03-6bb9-4061-820a-4da6ec960221"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.55.2",
    "pluggy-sdk": "^0.33.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
